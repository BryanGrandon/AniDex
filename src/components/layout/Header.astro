---
import data from '../../data.json' assert { type: 'json' }
const { title, logo, description, button } = data.header
---

<header class='p-4 flex flex-col gap-4'>
  <nav class='flex justify-between items-center text-white'>
    <a href={logo.href}>{logo.text}</a>
    <a href={button.href}>{button.text}</a>
  </nav>
  <section class='flex flex-col items-center justify-center gap-4'>
    <h1 class='font-basicaline text-5xl'>{title}</h1>
    <p class='prose prose-lg dark:prose-invert'>{description}</p>
  </section>
</header>
