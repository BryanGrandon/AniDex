---
import Title from '../components/ui/Title.astro'
import Header from '../components/content/index/Header.astro'
import Layout from '../layouts/Layout.astro'

import CurrentSeasonSwiper from '../components/content/index/CurrentSeasonSwiper'
import LatestEpisodesUpdatesSwiper from '../components/content/index/LatestEpisodesUpdatesSwiper'
import TopUpcomingAnimeSwiper from '../components/content/index/TopUpcomingAnimeSwiper'
import Aside from '../components/content/index/Aside.astro'
---

<Layout>
  <Header structureId='header' />

  <article id='slider' class=''>
    <CurrentSeasonSwiper client:only />
  </article>

  <main class='flex flex-col gap-8'>
    <article>
      <Title text='Latest Episodes Updates' />
      <LatestEpisodesUpdatesSwiper client:only />
    </article>

    <article class=''>
      <Title text='Top Upcoming Anime' />
      <TopUpcomingAnimeSwiper client:only />
    </article>

    <!-- watch api -->

    <!-- <article class='bg-blue-700 p-4'>
      <h2>Recommendations</h2>
    </article> -->
  </main>
  <Aside />
  <!-- <aside class='justify-center gap-4 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3'>
    <article class=''>
      <Title text='Top Airing Anime' />
      <TopAiringAnime />
    </article>

    <article class=''>
      <Title text='Most popular anime' />
      <MostPopularAnime />
    </article>

    <article class='test'>
      <Title text='Most popular manga' />
      <MostPopularManga />
    </article>
  </aside> -->
  <footer class=''>
    <p>Copyright</p>
    <p>ETC... ?</p>
  </footer>
</Layout>

<style>
  header {
    grid-area: header;
    padding: 1rem;
    border-bottom: 1px solid #dee2e6;
  }
  aside {
    grid-area: aside;
    background-color: #181818;
    padding: 1rem;
    border-radius: 8px;
  }
  main {
    grid-area: main;
    padding: 1rem;
  }
  footer {
    grid-area: footer;
    padding: 1rem;
    background-color: cadetblue;
    border-top: 1px solid #dee2e6;
  }

  #slider {
    grid-area: content;
  }

  @media screen and (min-width: 1050px) {
    aside {
      grid-template-columns: 1fr;
    }
  }
</style>
