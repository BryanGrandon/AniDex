---
import Header from '../components/content/index/layout/Header.astro'
import Layout from '../layouts/Layout.astro'
import Aside from '../components/content/index/layout/Aside.astro'
import Main from '../components/content/index/layout/Main.astro'
import Footer from '../components/content/index/layout/Footer.astro'
import ModalContent from '../components/layout/ModalContent'
---

<Layout>
  <Header />
  <Main />
  <Aside />
  <Footer />
  <ModalContent client:only />
</Layout>

<style>
  footer {
    grid-area: footer;
    padding: 1rem;
    background-color: cadetblue;
    border-top: 1px solid #dee2e6;
  }
</style>
