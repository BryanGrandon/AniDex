---
import Header from '../components/index-page/layout/Header.astro'
import Layout from '../layouts/Layout.astro'
import Aside from '../components/index-page/layout/Aside.astro'
import Main from '../components/index-page/layout/Main.astro'
import Modal from '../components/modal/Modal'
import Footer from '../components/core/layout/Footer.astro'
---

<Layout>
  <article class='home'>
    <Header />
    <Main />
    <Aside />
    <Footer gridArea='footer' />
  </article>
</Layout>

<style>
  .home {
    display: grid;
    grid-template-columns: repeat(3, 1fr) 400px;
    grid-template-areas:
      'header header header header'
      'main main main aside'
      'main main main aside'
      'main main main aside'
      'footer footer footer footer';
  }
  .home-hidden {
    display: none;
  }
  @media screen and (max-width: 1050px) {
    .home {
      grid-template-columns: repeat(4, 1fr);
      grid-template-areas:
        'header header header header'
        'main main main main'
        'main main main main'
        'aside aside aside aside'
        'footer footer footer footer';
    }
  }
</style>
